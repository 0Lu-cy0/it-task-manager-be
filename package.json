{
  "name": "nodejs-expressjs-mongodb-base-project",
  "private": true,
  "version": "1.0.0",
  "author": "Cat2004",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext js --fix",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "npm run build && BUILD_MODE=production node ./build/src/server.js",
    "server": "cross-env BUILD_MODE=dev nodemon --exec babel-node ./src/server.js",
    "dev": "npm run server",
    "start": "node ./build/src/server.js",
    "debug": "node inspect ./src/server.js",
    "migrate:check-viewer": "babel-node src/scripts/check-viewer-role.js",
    "migrate:remove-viewer": "babel-node src/scripts/migrate-remove-viewer-role.js",
    "migrate:cleanup-orphaned": "babel-node src/scripts/cleanup-orphaned-viewer-roles.js",
    "migrate:add-liked": "babel-node src/scripts/migrate-add-liked-field.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.10",
    "async-exit-hook": "^2.0.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "fuse.js": "^7.0.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.10.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.0.0",
    "mongoose": "7.6.3",
    "nodemailer": "^7.0.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/eslint-parser": "^7.22.10",
    "@babel/node": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@types/node": "^24.0.10",
    "babel-plugin-module-resolver": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2"
  },
  "packageManager": "yarn@4.12.0+sha512.f45ab632439a67f8bc759bf32ead036a1f413287b9042726b7cc4818b7b49e14e9423ba49b18f9e06ea4941c1ad062385b1d8760a8d5091a1a31e5f6219afca8"
}